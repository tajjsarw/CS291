#include <iostream>
using namespace std;

//Tajrian Sarwar CS291 Spring 2019
//task two [working with functions]

bool isEven(int num)
{
	bool tf; //tf, meaning true or false
	if (num % 2 == 0) //if num is divisible by 2, it is even, if there is a remainder it is odd
		tf = true;
	else
		tf = false;

	return tf;
}

int main()
{
	cout << "Is seven an even number?\n" << isEven(7) << endl;
	cout << "Is ten an even number?\n" << isEven(10) << endl;
	
	system("pause");
	return 0;
}
