#include <iostream>
#include <string>
using namespace std;

struct product
{
	string name;
	double weight;
	double price;
	string barcode;
};

int main()
{
	product milk, juice, bread;
	milk.name = "Shoprite Whole Milk";
	milk.weight = 8.6;
	milk.price = 2.69;

	juice.name = "Simply Orange Juice";
	juice.weight = 5.2;
	juice.price = 2.19;

	bread.name = "Shoprite Whole Wheat Bread";
	bread.weight = 0.5;
	bread.price = 1.29;

	cout << milk.name << endl;
	cout << milk.weight << " lbs" << endl;
	cout << "$" << milk.price << endl;

	cout << endl;

	cout << juice.name << endl;
	cout << juice.weight << " lbs" << endl;
	cout << "$" << juice.price << endl;
	
	cout << endl;
	
	cout << bread.name << endl;
	cout << bread.weight << " lbs" << endl;
	cout << "$" << bread.price << endl;

	cout << endl;
	system("pause");
	return 0;
}
