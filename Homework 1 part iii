#include <iostream>
#include <array>
using namespace std;
//Tajrian Sarwar CS291 Spring 2019
//task three [working with c-style array]
int main()
{
	int a1[] = { 4, 9, 12, 15, 70, 99, 23, 55, 67, 88 };
	cout << "The following elements are greater than 20." << endl;
	cout << endl;
	for (int i = 0; i < sizeof(a1); i++)
	{
		if (a1[i] > 20)
		cout << a1[i] << " is greater than 20." << endl;
	}

	system("pause");
	return 0;
}
